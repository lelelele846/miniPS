<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/tool_bg"
    android:paddingStart="24dp"
    android:paddingTop="16dp"
    android:paddingEnd="24dp"
    android:paddingBottom="32dp">

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_gradient_description"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/txtAngleLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_gradient_angle"
        android:textColor="@android:color/white" />

    <SeekBar
        android:id="@+id/sliderAngle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="180"
        android:progress="45" />

    <TextView
        android:id="@+id/txtSoftnessLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/label_gradient_softness"
        android:textColor="@android:color/white" />

    <SeekBar
        android:id="@+id/sliderSoftness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="80"
        android:progress="40" />

    <Button
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/action_apply_gradient" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@android:string/cancel" />

</LinearLayout>

